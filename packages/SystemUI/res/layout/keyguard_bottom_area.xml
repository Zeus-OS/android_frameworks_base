<com.android.systemui.statusbar.phone.KeyguardBottomAreaView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyguard_bottom_area"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:outlineProvider="none"
    android:elevation="5dp" > <!-- Put it above the status bar header -->

    <LinearLayout
        android:id="@+id/keyguard_indication_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingTop="@dimen/keyguard_animation_info_padding_top"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication"
             android:layout_width="@dimen/keyguard_charging_indication_width"
             android:layout_height="@dimen/keyguard_charging_indication_height"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_charging_indication.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_1"
             android:layout_width="96dp"
             android:layout_height="66dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_charge_battery.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_2"
             android:layout_width="96dp"
             android:layout_height="96dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_charge_drop.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_3"
             android:layout_width="96dp"
             android:layout_height="96dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_charge_explosion.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_4"
             android:layout_width="96dp"
             android:layout_height="96dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_charge_water.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_5"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_charge_colorful.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_6"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_charge_progress.json"
             app:lottie_loop="true"
             android:visibility="gone" />

         <!-- Always show animations on lockscreen -->
        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_7"
             android:layout_width="185dp"
             android:layout_height="120dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_siri.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_8"
             android:layout_width="145dp"
             android:layout_height="120dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_horizontal_load.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_9"
             android:layout_width="145dp"
             android:layout_height="120dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_loader.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_10"
             android:layout_width="145dp"
             android:layout_height="120dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_pulse.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_11"
             android:layout_width="145dp"
             android:layout_height="120dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_ball.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_12"
             android:layout_width="145dp"
             android:layout_height="120dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_blue_loading.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_13"
             android:layout_width="145dp"
             android:layout_height="120dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_load_smile.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/charging_indication_14"
             android:layout_width="145dp"
             android:layout_height="120dp"
             android:layout_gravity="center_horizontal"
             android:clickable="false"
             app:lottie_fileName="keyguard_equalizer.json"
             app:lottie_loop="true"
             android:visibility="gone" />

        <com.android.systemui.statusbar.phone.KeyguardIndicationTextView
            android:id="@+id/keyguard_indication_enterprise_disclosure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/keyguard_indication_text_padding"
            android:paddingEnd="@dimen/keyguard_indication_text_padding"
            android:textAppearance="@style/TextAppearance.Keyguard.BottomArea"
            android:visibility="gone"/>

        <com.android.systemui.omni.BatteryBarView
            android:id="@+id/battery_bar_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/battery_bar_view_height"
            android:background="@drawable/battery_bar_view_bg"
            android:visibility="gone"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="3dp" >

            <ImageView
                android:id="@+id/battery_bar_view_fg"
                android:layout_width="0dp"
                android:layout_height="@dimen/battery_bar_view_height"
                android:src="@drawable/battery_bar_view_fg"/>
        </com.android.systemui.omni.BatteryBarView>

        <com.android.systemui.statusbar.phone.KeyguardIndicationTextView
            android:id="@+id/keyguard_indication_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/keyguard_indication_text_padding"
            android:paddingEnd="@dimen/keyguard_indication_text_padding"
            android:textAppearance="@style/TextAppearance.Keyguard.BottomArea"
            android:accessibilityLiveRegion="polite"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/preview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <com.android.systemui.statusbar.KeyguardAffordanceView
        android:id="@+id/camera_button"
        android:layout_height="@dimen/keyguard_affordance_height"
        android:layout_width="@dimen/keyguard_affordance_width"
        android:layout_gravity="bottom|end"
        android:padding="@dimen/keyguard_affordance_padding"
        android:layout_margin="@dimen/keyguard_affordance_margin"
        android:background="@drawable/keyguard_affordance_background"
        android:src="@drawable/ic_camera_alt_24dp"
        android:scaleType="center"
        android:contentDescription="@string/accessibility_camera_button"
        android:tint="@android:color/white" />

    <com.android.systemui.statusbar.KeyguardAffordanceView
        android:id="@+id/left_button"
        android:layout_height="@dimen/keyguard_affordance_height"
        android:layout_width="@dimen/keyguard_affordance_width"
        android:layout_gravity="bottom|start"
        android:padding="@dimen/keyguard_affordance_padding"
        android:layout_margin="@dimen/keyguard_affordance_margin"
        android:background="@drawable/keyguard_affordance_background"
        android:src="@*android:drawable/ic_phone"
        android:scaleType="center"
        android:contentDescription="@string/accessibility_phone_button"
        android:tint="@android:color/white" />

    <FrameLayout
        android:id="@+id/overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/keyguard_bottom_area_overlay" />

    </FrameLayout>

</com.android.systemui.statusbar.phone.KeyguardBottomAreaView>
